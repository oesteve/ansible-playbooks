server {
  listen              80;
  listen              [::]:80;
  server_name         oscaresteve.com www.oscaresteve.com;

  location '/.well-known/acme-challenge' {
    default_type "text/plain";
    root         /var/www/letsencrypt;
  }

  location / {
    return              301 https://$server_name$request_uri;
  }
}

server {
    include /etc/nginx/conf.d/ssl/options-ssl-nginx.conf;

    listen 443 ssl http2;
    server_name oscaresteve.com oscaresteve.es;

    ssl_certificate     /etc/letsencrypt/live/oscaresteve.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/oscaresteve.com/privkey.pem;
    # Diffie-Hellman parameter for DHE ciphersuites, recommended 2048 bits
    ssl_dhparam /etc/nginx/conf.d/ssl/dhparam.pem;


    location / {
        proxy_pass                         http://172.17.0.1:8088/;
        proxy_set_header Host              $host;
        proxy_set_header X-Forwarded-For   $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
